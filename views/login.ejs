<% include partials/header %>
<main class="container py-5">
  <section class="row justify-content-center">
    <article class="col-md-5">
      <div class="card card-body card-shadow">
          <h4 class="mb-0">Login</h4>
          <hr class="mb-4">
          <form action="login" method="POST" class="">
            <div class="form-group">
              <label for="email" class="">E-mail</label>
              <input type="email" class="form-control" name="email" placeholder="Adresse mail: exemple@gmail.com...">
            </div>
            <div class="form-group">
              <label for="password" class="">Mot de passe</label>
              <input type="password" class="form-control" name="password" placeholder="••••••">
            </div>
            <input type="submit" class="btn btn-brand btn-block" value="Se connecter">
          </form>
          <hr>
          <p class="mb-0 text-center"><a href="/register" class="">Vous ne possédez pas encore de compte ? <br/>créer en un ici !</a></p>
      </div>
    </article>
  </section>
</main>
